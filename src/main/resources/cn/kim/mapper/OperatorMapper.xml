    <!--编辑账号登录-->
    <update id="updateOperatorSub" parameterType="java.util.Map">
        UPDATE SYS_OPERATOR_SUB
        <set>
            <if test="ID != null">ID=#{ID},</if>
            <if test="SO_ID != null">SO_ID=#{SO_ID},</if>
            <if test="SOS_USERNAME != null">SOS_USERNAME=#{SOS_USERNAME},</if>
