        </set>
        <where>
            <if test="ID !=null">ID=#{ID}</if>
        </where>
    </update>

    <!--删除账号登录-->
    <delete id="deleteOperatorSub" parameterType="java.util.Map">
        DELETE FROM SYS_OPERATOR_SUB
        <where>
            <if test="ID != NULL and ID != ''">
                AND ID = #{ID}
            </if>
            <if test="SO_ID != NULL and SO_ID != ''">
                AND SO_ID = #{SO_ID}
            </if>
        </where>
    </delete>

